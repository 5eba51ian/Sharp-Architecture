<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ContextMenuHandler="clr-namespace:SharpArch.PackageManagement.ContextMenuHandler" xmlns:Framework="clr-namespace:SharpArch.PackageManagement.ContextMenuHandler.Framework">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />


    <Style TargetType="{x:Type Framework:HintTextDecorator}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Framework:HintTextDecorator}">
                    <Grid>
                        <ContentPresenter />
                        <TextBlock 
                            IsHitTestVisible="False"
                            FontStyle="Italic"
                            Opacity="0.5"
                            Margin="{TemplateBinding Padding}" 
                            Text="{TemplateBinding HintText}" 
                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=HintTextVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
